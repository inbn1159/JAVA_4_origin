<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">



<mapper namespace="org.galapgos.mapper.BestMapper">
	<select id="getTotalCount" resultType="int">
		select count(*) from view_best
		<where>
			<include refid="criteria"></include>
		</where>		
	</select>
	
	<select id="getList" resultType="BestVO">
		select * from view_best		
		<where>
			<include refid="criteria"></include>
		</where>
		order by Column1
		limit #{offset} , #{amount} 
	</select>	
	
	<select id="getRandom" resultType="BestVO">
		select * from view_best
		order by rand()
		limit #{count}
	</select>	
		
	
	
	<select id="read" resultType="BestVO">
		select * from view_best
		where Column1 = #{Column1}
	</select>	
</mapper>	